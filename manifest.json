{
  "manifest_version": 3,
  "name": "DOT/Mermaid Viewer",
  "version": "1.1.0",
  "description": "A graph drawing and checking tool that supports DOT language and Mermaid notation. It can also output as an image.",
  "action": {
    "default_icon": {
      "16": "images/dot_mermaid_128_128.png",
      "48": "images/dot_mermaid_128_128.png",
      "128": "images/dot_mermaid_128_128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "windows",
    "system.display"
  ],
  "icons": {
    "16": "images/dot_mermaid_128_128.png",
    "48": "images/dot_mermaid_128_128.png",
    "128": "images/dot_mermaid_128_128.png"
  }
}
